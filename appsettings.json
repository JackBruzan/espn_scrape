{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information",
            "Quartz": "Information",
            "ESPNScrape.Services.EspnHttpService": "Debug",
            "ESPNScrape.HealthChecks.EspnApiHealthCheck": "Information",
            "ESPNScrape.Services": "Information"
        }
    },
    "Quartz": {
        "Scheduler": {
            "InstanceName": "ESPNScrapeScheduler"
        },
        "ThreadPool": {
            "Type": "Quartz.Simpl.SimpleThreadPool, Quartz",
            "ThreadCount": 3
        },
        "JobStore": {
            "Type": "Quartz.Simpl.RAMJobStore, Quartz"
        }
    },
    "Cache": {
        "DefaultTtlMinutes": 30,
        "SeasonDataTtlHours": 24,
        "CompletedGameTtlMinutes": 60,
        "LiveGameTtlSeconds": 30,
        "PlayerStatsTtlMinutes": 15,
        "TeamDataTtlHours": 12,
        "EnableCacheWarming": true,
        "MaxCacheSize": 1000
    },
    "Resilience": {
        "RetryPolicy": {
            "MaxRetryAttempts": 3,
            "BaseDelayMs": 1000,
            "MaxDelayMs": 30000,
            "EnableJitter": true,
            "JitterFactor": 0.1,
            "RetryableStatusCodes": [
                429,
                502,
                503,
                504
            ],
            "RetryOnTimeout": true
        },
        "CircuitBreaker": {
            "FailureThreshold": 5,
            "OpenCircuitDurationSeconds": 60,
            "SuccessThreshold": 2,
            "MinimumThroughput": 10,
            "SamplingDurationSeconds": 30,
            "FailureStatusCodes": [
                500,
                502,
                503,
                504
            ]
        },
        "RateLimit": {
            "MaxRequests": 100,
            "TimeWindowSeconds": 60,
            "EnableDistributedLimiting": false,
            "BurstAllowance": 10,
            "QueueTimeoutMs": 5000
        },
        "Timeouts": {
            "DefaultRequestTimeoutSeconds": 30,
            "ScoreboardRequestTimeoutSeconds": 45,
            "BoxScoreRequestTimeoutSeconds": 60,
            "PlayerStatsRequestTimeoutSeconds": 90,
            "HealthCheckTimeoutSeconds": 10,
            "BulkOperationTimeoutMinutes": 30
        },
        "HealthCheck": {
            "CheckIntervalSeconds": 30,
            "FailureThreshold": 3,
            "EnableDetailedReporting": true,
            "TestEndpoints": [
                "/nfl/",
                "/nfl/scoreboard"
            ],
            "EnableBackgroundMonitoring": true,
            "StartupGracePeriodSeconds": 120
        }
    },
    "BulkOperations": {
        "DefaultMaxConcurrency": 5,
        "DefaultBatchSize": 10,
        "DefaultMaxRetries": 3,
        "DefaultRetryDelay": "00:00:01",
        "DefaultMaxMemoryThreshold": 1073741824,
        "DefaultProgressUpdateInterval": "00:00:05",
        "EnableMetricsByDefault": true,
        "EnableProgressReportingByDefault": true,
        "UseStreamingParsingByDefault": true,
        "ContinueOnErrorByDefault": true,
        "PerformanceOptimization": {
            "EnableAutoGarbageCollection": true,
            "MemoryOptimizationInterval": "00:05:00",
            "EnableParallelProcessing": true,
            "MaxDegreeOfParallelism": 0,
            "EnableStreamingParsing": true,
            "StreamingParsingThreshold": 1048576
        },
        "MemoryManagement": {
            "EnableMemoryMonitoring": true,
            "WarningThresholdPercentage": 0.8,
            "ForceGCOnThresholdExceeded": true,
            "DelayOnCriticalMemory": true,
            "CriticalMemoryDelay": "00:00:05"
        },
        "ProgressReporting": {
            "MinUpdateInterval": "00:00:01",
            "MaxUpdateInterval": "00:00:30",
            "IncludePerformanceMetrics": true,
            "IncludeMemoryUsage": true,
            "IncludeTimeEstimates": true,
            "LogProgressUpdates": true,
            "ProgressLogLevel": "Information"
        }
    },
    "ESPNScrape": {
        "DownloadDirectory": "downloads/nfl_players",
        "DelayBetweenDownloads": 100,
        "UserAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36",
        "PlayersApiUrl": "https://sports.core.api.espn.com/v3/sports/football/nfl/athletes?limit=20000&active=true",
        "PlayerImageBaseUrl": "https://a.espncdn.com/combiner/i?img=/i/headshots/nfl/players/full/{0}.png"
    },
    "DataStorage": {
        "Directory": "data"
    },
    "Job": {
        "ForceExecution": false,
        "TimeoutMinutes": 30
    }
}